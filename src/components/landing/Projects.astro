---
import projects from "../../config/projects.json";
---

<h2 class="font-bold text-5xl my-5 text-center mt-20">Projects</h2>
{
    projects.map((project) => (
        <div class="flex flex-col text-center  bg-zinc-800 rounded-xl px-8 py-5 mb-8 md:flex-row">
            <div class="flex-1 p-4">
                <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                <p>{project.description}</p>
                <button class="bg-indigo-500 px-3 py-2 rounded-xl hover:bg-indigo-300 mt-6">More info</button>
            </div>
            <div class="flex-1">
                <img src={project.image} class="w-72 mt-8 m-auto" />
            </div>
        </div>
    ))
}
